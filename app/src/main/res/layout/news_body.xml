<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/top_bar"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/red"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="20dp">
        <ImageButton
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:background="@drawable/return_white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:textSize="17sp"
            android:text="正文"/>
    </RelativeLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:fillViewport="true"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="14dp"
                android:paddingBottom="34dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:text="特斯拉电话会记录：上海工厂短期停工影响有限"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="18dp">
                    <ImageView
                        android:id="@+id/news_body_head_portrait"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/man_icon"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="vertical"
                        android:layout_toRightOf="@+id/news_body_head_portrait"
                        android:layout_marginLeft="10dp">
                        <TextView
                            android:id="@+id/news_body_username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="阿尔法工厂"
                            android:textSize="14sp"
                            />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/news_body_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_gray"
                                android:text="20分钟前"
                                android:textSize="12sp"
                                />
                            <TextView
                                android:id="@+id/news_body_number_of_read"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:textColor="@color/text_gray"
                                android:text="20人已阅读"
                                android:textSize="12sp"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <CheckBox
                        android:id="@+id/news_body_focus_on_btn"
                        android:layout_width="60dp"
                        android:layout_height="26dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:background="@drawable/focus_on_background_selector"
                        android:button="@null"
                        android:text="关注"
                        android:textColor="@drawable/focus_on_text_color_selector"/>
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/news_body_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <TextView
                        android:id="@+id/news_body_content_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:text="看了这个逻辑关系图,才更清晰为何不让你随便外出了"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="70dp"
                    android:text="关键字"
                    android:textColor="@color/black"
                    android:textSize="14sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:paddingLeft="9dp"
                        android:paddingRight="9dp"
                        android:background="@drawable/news_body_keyword_bg"
                        android:textColor="@color/cyanine"
                        android:textSize="13sp"
                        android:text="# 特斯拉"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:paddingLeft="9dp"
                        android:paddingRight="9dp"
                        android:background="@drawable/news_body_keyword_bg"
                        android:textColor="@color/cyanine"
                        android:textSize="13sp"
                        android:text="# 上海工厂"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="50dp"
                    >
                    <RadioGroup
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">
                        <RadioButton
                            android:id="@+id/news_body_praised_btn"
                            android:layout_width="100dp"
                            android:layout_height="36dp"
                            android:gravity="center"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:background="@drawable/news_body_praised_border_selector"
                            android:button="@null"
                            android:drawableLeft="@drawable/praised_image_selector"
                            android:textColor="@color/checked_red_unchecked_black_selector"
                            android:textSize="14sp"
                            android:text="123"/>
                    </RadioGroup>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp">
                        <Button
                            android:id="@+id/news_body_wechat_btn"
                            android:layout_width="100dp"
                            android:layout_height="36dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:background="@drawable/border_gray"
                            style="?android:attr/borderlessButtonStyle"
                            android:drawableLeft="@drawable/wechat"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:text="微信"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">
                        <Button
                            android:id="@+id/news_body_circle_of_friends_btn"
                            android:layout_width="100dp"
                            android:layout_height="36dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:background="@drawable/border_gray"
                            style="?android:attr/borderlessButtonStyle"
                            android:drawableLeft="@drawable/circle_of_friends"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:text="朋友圈"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <View android:layout_width="match_parent"
                android:layout_height="12dp"
                android:alpha="0.6"
                android:background="@color/light_gray"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="20dp">
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/comments_red"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="21dp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:text="精彩评论"/>
                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal"
                        android:divider="?android:attr/dividerVertical"
                        android:showDividers="middle"
                        >
                        <RadioButton
                            android:id="@+id/news_body_comments_hot_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@null"
                            android:background="@null"
                            android:layout_marginRight="5dp"
                            android:textSize="13sp"
                            android:checked="true"
                            android:textColor="@color/checked_red_unchecked_black_selector"
                            android:text="热度"/>
                        <RadioButton
                            android:id="@+id/news_body_comments_latest_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@null"
                            android:background="@null"
                            android:layout_marginLeft="5dp"
                            android:textSize="13sp"
                            android:textColor="@color/checked_red_unchecked_black_selector"
                            android:text="最新"/>
                    </RadioGroup>
                </RelativeLayout>
                <View android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:alpha="0.6"
                    android:background="@color/gray"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="28dp"
                        android:layout_marginBottom="28dp"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="还没有人评论哦，快来抢沙发..."/>
                    <edu.ntu.graduation.util.NoScrollListview
                        android:id="@+id/news_body_comment_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </edu.ntu.graduation.util.NoScrollListview>
                    <include layout="@layout/news_body_comments_list_item"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <View android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:alpha="0.6"
        android:background="@android:color/darker_gray"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:gravity="center_vertical">
        <Button
            android:id="@+id/news_body_comment_box_btn"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@color/light_gray"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center_vertical"
            android:text="我来说两句..."
            android:textSize="18sp"
            android:textColor="@color/text_gray"
            android:ellipsize="end"
            android:lines="1"
            />
        <ImageButton
            android:id="@+id/news_body_comment_btn"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/comment_black"
            />
        <CheckBox
            android:id="@+id/news_body_star_checkbox"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginRight="24dp"
            android:button="@null"
            android:background="@drawable/news_star_selector"
        />
        <ImageButton
            android:id="@+id/news_body_share_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="18dp"
            android:background="@drawable/share_dark_gray"
            />
    </LinearLayout>
</LinearLayout>