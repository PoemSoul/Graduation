<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RadioGroup
            android:id="@+id/stock_details_discussion_rg"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <RadioButton
                android:id="@+id/stock_details_discussion_rb_newest"
                style="@style/RadioButtonStyle"
                android:layout_width="66dp"
                android:layout_height="26dp"
                android:textColor="@color/checked_red_unchecked_black_selector"
                android:background="@drawable/stock_details_discussion_rb_bg_selector"
                android:checked="true"
                android:textSize="16sp"
                android:text="最新"/>
            <RadioButton
                android:id="@+id/stock_details_discussion_hottest"
                style="@style/RadioButtonStyle"
                android:layout_marginLeft="14dp"
                android:layout_width="66dp"
                android:layout_height="26dp"
                android:textColor="@color/checked_red_unchecked_black_selector"
                android:background="@drawable/stock_details_discussion_rb_bg_selector"
                android:textSize="16sp"
                android:text="最热"/>
        </RadioGroup>
<!--        <include layout="@layout/stock_details_discussion_list_item"/>-->
<!--        <include layout="@layout/stock_details_discussion_list_item"/>-->
        <edu.ntu.graduation.util.NoScrollListview
            android:layout_marginTop="4dp"
            android:id="@+id/stock_details_discussion_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>