<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="14dp"
    android:paddingRight="14dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="6dp"
        android:paddingBottom="6dp">
        <ImageView
            android:id="@+id/focus_on_head_portrait"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/man_icon"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/focus_on_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="管润玮开法拉利"
                android:textSize="16sp"
            />
            <TextView
                android:id="@+id/focus_on_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray"
                android:text="20分钟前"
                android:textSize="12sp"
                />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/focus_on_contents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:text="管总牛批管总牛批管总牛批管总牛批管总牛批管总牛批管总牛批管总牛批管总牛批管总牛批管总牛批管总牛批管总牛批管总牛批管总牛批管总牛批管总牛批管总牛批管总牛批"
        android:ellipsize="end"
        android:lines="3" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:gravity="center_vertical"
            android:id="@+id/focus_on_number_of_read"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:textColor="@color/text_gray"
            android:textSize="14sp"
            android:text="9999999人已阅读"
            android:layout_weight="2"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/comments_gray"/>
            <TextView
                android:id="@+id/focus_on_number_of_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray"
                android:textSize="15sp"
                android:text="9"
                />
        </LinearLayout>
        <Button
            android:id="@+id/focus_on_is_praised"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            style="?android:attr/borderlessButtonStyle"
            android:text="1"
            android:textColor="@color/text_gray"
            android:drawableLeft="@drawable/praise_unchecked"/>
    </LinearLayout>


</LinearLayout>