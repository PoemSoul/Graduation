<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="6dp"
        android:paddingBottom="6dp">
        <ImageView
            android:id="@+id/shuo_shuo_list_item_head_portrait"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/man_icon"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/shuo_shuo_list_item_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="用户名"
                    android:textSize="16sp"
                    />
                <TextView
                    android:layout_marginLeft="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:textColor="#F0AF04"
                    android:background="#30FFC107"
                    android:textSize="12sp"
                    android:text="股龄12年"/>
            </LinearLayout>
            <TextView
                android:id="@+id/shuo_shuo_list_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray"
                android:text="20分钟前"
                android:textSize="12sp"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/shuo_shuo_list_item_contents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:text="啥时候开学啊？啥时候开学啊？啥时候开学啊？啥时候开学啊？"
             />
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:layout_marginTop="8dp">
            <ImageView
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:background="@drawable/img1"/>
            <ImageView
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/img1"/>
            <ImageView
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:background="@drawable/img1"/>
            <ImageView
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/img1"/>
            <ImageView
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/img1"/>
            <ImageView
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/img1"/>
        </GridLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:gravity="center_vertical"
            android:id="@+id/shuo_shuo_list_item_number_of_read"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:textColor="@color/text_gray"
            android:textSize="14sp"
            android:text="浏览28次" />
        <RadioGroup
            android:layout_toLeftOf="@id/shuo_shuo_list_item_praised_number"
            android:id="@+id/shuo_shuo_list_item_praised_group"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            >
            <RadioButton
                android:id="@+id/shuo_shuo_list_item_praised_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:button="@null"
                android:background="@drawable/praised_image_selector"
                />
        </RadioGroup>
        
        <TextView
            android:id="@+id/shuo_shuo_list_item_praised_number"
            android:layout_width="44dp"
            android:layout_toLeftOf="@id/shuo_shuo_list_item_comments_btn"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="3dp"
            android:textColor="@color/text_gray"
            android:textSize="18sp"
            android:text="12"/>

        <ImageButton
            android:id="@+id/shuo_shuo_list_item_comments_btn"
            android:layout_toLeftOf="@id/shuo_shuo_list_item_comments_number"
            android:layout_centerVertical="true"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/comments_gray"/>

        <TextView
            android:id="@+id/shuo_shuo_list_item_comments_number"
            android:layout_width="44dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/text_gray"
            android:textSize="18sp"
            android:text="12"/>

    </RelativeLayout>
    <View
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/light_gray"/>
</LinearLayout>