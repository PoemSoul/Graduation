<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="股票排行"/>
        <edu.ntu.graduation.util.CustomRadioGroup
            android:id="@+id/ke_chuang_stocks_ranking_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/ke_chuang_stocks_ranking_rb_1"
                    style="@style/RadioButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="34dp"
                    android:layout_weight="1"
                    android:background="@drawable/market_hu_shen_radio_button_background_selector"
                    android:textColor="@color/checked_red_unchecked_black_selector"
                    android:checked="true"
                    android:textSize="14sp"
                    android:text="涨幅榜"/>
                <RadioButton
                    android:id="@+id/ke_chuang_stocks_ranking_rb_2"
                    style="@style/RadioButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="34dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/market_hu_shen_radio_button_background_selector"
                    android:textColor="@color/checked_red_unchecked_black_selector"
                    android:textSize="14sp"
                    android:text="跌幅榜"/>
                <RadioButton
                    android:id="@+id/ke_chuang_stocks_ranking_rb_3"
                    style="@style/RadioButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="34dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/market_hu_shen_radio_button_background_selector"
                    android:textColor="@color/checked_red_unchecked_black_selector"
                    android:textSize="14sp"
                    android:text="成交量"/>
                <RadioButton
                    android:id="@+id/ke_chuang_stocks_ranking_rb_4"
                    style="@style/RadioButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="34dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/market_hu_shen_radio_button_background_selector"
                    android:textColor="@color/checked_red_unchecked_black_selector"
                    android:textSize="14sp"
                    android:text="交易量"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="14dp">
                <RadioButton
                    android:id="@+id/ke_chuang_stocks_ranking_rb_5"
                    style="@style/RadioButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="34dp"
                    android:layout_weight="1"
                    android:background="@drawable/market_hu_shen_radio_button_background_selector"
                    android:textColor="@color/checked_red_unchecked_black_selector"
                    android:textSize="14sp"
                    android:text="换手率"/>
                <RadioButton
                    android:id="@+id/ke_chuang_stocks_ranking_rb_6"
                    style="@style/RadioButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="34dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/market_hu_shen_radio_button_background_selector"
                    android:textColor="@color/checked_red_unchecked_black_selector"
                    android:textSize="14sp"
                    android:text="当前价"/>
                <RadioButton
                    android:id="@+id/ke_chuang_stocks_ranking_rb_7"
                    style="@style/RadioButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="34dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/market_hu_shen_radio_button_background_selector"
                    android:textColor="@color/checked_red_unchecked_black_selector"
                    android:textSize="14sp"
                    android:text="市盈率"/>
                <RadioButton
                    android:id="@+id/ke_chuang_stocks_ranking_rb_8"
                    style="@style/RadioButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="34dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/market_hu_shen_radio_button_background_selector"
                    android:textColor="@color/checked_red_unchecked_black_selector"
                    android:textSize="14sp"
                    android:text="市净率"/>
            </LinearLayout>
        </edu.ntu.graduation.util.CustomRadioGroup>
        <RelativeLayout
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/ke_chuang_stocks_ranking_industry_groups"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:textColor="@color/text_gray"
                android:textSize="15sp"
                android:text="行业板块"/>
            <TextView
                android:id="@+id/ke_chuang_stocks_ranking_selection"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/ke_chuang_stocks_ranking_industry_groups"
                android:gravity="right"
                android:textColor="@color/text_gray"
                android:textSize="15sp"
                android:text="涨幅"/>
            <TextView
                android:id="@+id/ke_chuang_stocks_ranking_newest"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/ke_chuang_stocks_ranking_selection"
                android:gravity="right"
                android:textColor="@color/text_gray"
                android:textSize="15sp"
                android:text="最新"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="@color/light_gray"
            />
        <include layout="@layout/main_market_hu_shen_stocks_ranking_list_item" />
        <edu.ntu.graduation.util.NoScrollListview
            android:id="@+id/ke_chuang_stocks_ranking_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </edu.ntu.graduation.util.NoScrollListview>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>