<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/top_bar"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:orientation="horizontal"
        android:background="@color/red"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">
        <ImageButton
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:background="@drawable/return_white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:textSize="17sp"
            android:text="停复牌"/>
    </RelativeLayout>
    <com.androidkun.xtablayout.XTabLayout
        android:id="@+id/ting_fu_pai_tl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:xTabIndicatorColor="@color/red"
        app:xTabIndicatorHeight="1dp"
        app:xTabIndicatorWidth="40dp"
        app:xTabTextSize="14sp"
        app:xTabSelectedTextSize="15sp"
        app:xTabSelectedTextColor="@color/red"
        app:xTabTextColor="@color/black"
        app:xTabMode="scrollable"
        />
    <View android:layout_width="match_parent"
        android:layout_marginTop="-2dp"
        android:layout_height="0.8dp"
        android:alpha="0.6"
        android:background="@color/light_gray"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/ting_fu_pai_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"/>
</LinearLayout>