<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/hu_shen_stocks_ranking_list_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:text="N华润微"/>
            <TextView
                android:id="@+id/hu_shen_stocks_ranking_list_ke_chuang"
                android:layout_below="@id/hu_shen_stocks_ranking_list_name"
                android:layout_marginTop="2dp"
                android:layout_width="22dp"
                android:layout_height="14dp"
                android:gravity="center"
                android:background="@drawable/stocks_ranking_ke_chuang_background"
                android:textColor="@color/white"
                android:textSize="9sp"
                android:text="科创"/>
            <TextView
                android:id="@+id/hu_shen_stocks_ranking_list_id"
                android:layout_below="@id/hu_shen_stocks_ranking_list_name"
                android:layout_toRightOf="@id/hu_shen_stocks_ranking_list_ke_chuang"
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray"
                android:textSize="13sp"
                android:text="688396"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/hu_shen_stocks_ranking_list_industry_groups"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:text="半导体及元件"/>
        <TextView
            android:id="@+id/hu_shen_stocks_ranking_list_selection"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/hu_shen_stocks_ranking_list_industry_groups"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:textColor="@color/red"
            android:textSize="18sp"
            android:text="251.48%"/>
        <TextView
            android:id="@+id/hu_shen_stocks_ranking_list_newest"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/hu_shen_stocks_ranking_list_selection"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:textColor="@color/red"
            android:textSize="18sp"
            android:text="44.99"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/light_gray"
        />
</LinearLayout>