<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:paddingTop="12dp"
            android:paddingBottom="20dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">
                    <TextView
                        android:id="@+id/hu_shen_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:letterSpacing="0.05"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:text="开盘中"/>
                    <TextView
                        android:id="@+id/hu_shen_date"
                        android:layout_below="@id/hu_shen_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_gray"
                        android:textSize="12sp"
                        android:text="2020-02-24 星期一"/>
                </RelativeLayout>
                <edu.ntu.graduation.util.TextBannerView
                    android:id="@+id/hu_shen_data_banner"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:background="@null"
                    app:setInterval="5000"
                    app:setAnimDuration="700"
                    app:setSingleLine="false"
                    app:setGravity="right"
                    app:setTextSize="14sp"
                    app:setDirection="bottom_to_top"
                    app:setTextColor="@color/text_gray"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="12dp">
                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="2dp"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="?android:colorBackground">
                    <FrameLayout
                        android:id="@+id/hu_shen_shang_data_background"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/green_gradient_background">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:layout_gravity="center">
                            <TextView
                                android:id="@+id/hu_shen_shang_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:text="上证指数"/>
                            <TextView
                                android:id="@+id/hu_shen_shang_data_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:textColor="@color/green"
                                android:textSize="18sp"
                                android:text="2994.31"/>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/hu_shen_shang_data_2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/green"
                                    android:textSize="12sp"
                                    android:text="-56.60"/>
                                <TextView
                                    android:id="@+id/hu_shen_shang_data_3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:textColor="@color/green"
                                    android:textSize="12sp"
                                    android:text="-1.87%"/>
                            </LinearLayout>
                        </LinearLayout>
                    </FrameLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="?android:colorBackground"
                    >
                    <FrameLayout
                        android:id="@+id/hu_shen_sheng_data_background"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/red_gradient_background">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:layout_gravity="center">
                            <TextView
                                android:id="@+id/hu_shen_sheng_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:text="深证成指"/>
                            <TextView
                                android:id="@+id/hu_shen_sheng_data_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:textColor="@color/red"
                                android:textSize="18sp"
                                android:text="11496.85"/>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/hu_shen_sheng_data_2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/red"
                                    android:textSize="12sp"
                                    android:text="+146.60"/>
                                <TextView
                                    android:id="@+id/hu_shen_sheng_data_3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:textColor="@color/red"
                                    android:textSize="12sp"
                                    android:text="+0.24%"/>
                            </LinearLayout>
                        </LinearLayout>
                    </FrameLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="2dp"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="?android:colorBackground">
                    <FrameLayout
                        android:id="@+id/hu_shen_chuang_ye_data_background"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/red_gradient_background">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:layout_gravity="center">
                            <TextView
                                android:id="@+id/hu_shen_chuang_ye_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:text="创业板"/>
                            <TextView
                                android:id="@+id/hu_shen_chuang_ye_data_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:textColor="@color/red"
                                android:textSize="18sp"
                                android:text="2208.52"/>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/hu_shen_chuang_ye_data_2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/red"
                                    android:textSize="12sp"
                                    android:text="+54.89"/>
                                <TextView
                                    android:id="@+id/hu_shen_chuang_ye_data_3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:textColor="@color/red"
                                    android:textSize="12sp"
                                    android:text="+2.39%"/>
                            </LinearLayout>
                        </LinearLayout>
                    </FrameLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="9dp"
            android:background="@color/light_gray"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="市场概况"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">
                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="2dp"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="2dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:text="涨跌停对比"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="4dp"
                            android:gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/green"
                                android:textSize="17sp"
                                android:text="3"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="17sp"
                                android:text=":"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/red"
                                android:textSize="17sp"
                                android:text="53"/>
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="2dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:text="昨日涨停表现"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:textColor="@color/red"
                            android:textSize="14sp"
                            android:text="3.13%"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:textColor="@color/gray"
                            android:textSize="12sp"
                            android:text="江南高纤"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="2dp"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="2dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:text="当前热股"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:textColor="@color/green"
                            android:textSize="14sp"
                            android:text="-0.50%"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:textColor="@color/gray"
                            android:textSize="12sp"
                            android:text="斯达半导"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="9dp"
            android:background="@color/light_gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="股票排行"/>
            <edu.ntu.graduation.util.CustomRadioGroup
                android:id="@+id/hu_shen_stocks_ranking_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/hu_shen_stocks_ranking_rb_1"
                        style="@style/RadioButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="34dp"
                        android:layout_weight="1"
                        android:background="@drawable/market_hu_shen_radio_button_background_selector"
                        android:textColor="@color/checked_red_unchecked_black_selector"
                        android:checked="true"
                        android:textSize="14sp"
                        android:text="涨幅榜"/>
                    <RadioButton
                        android:id="@+id/hu_shen_stocks_ranking_rb_2"
                        style="@style/RadioButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="34dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="12dp"
                        android:background="@drawable/market_hu_shen_radio_button_background_selector"
                        android:textColor="@color/checked_red_unchecked_black_selector"
                        android:textSize="14sp"
                        android:text="跌幅榜"/>
                    <RadioButton
                        android:id="@+id/hu_shen_stocks_ranking_rb_3"
                        style="@style/RadioButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="34dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="12dp"
                        android:background="@drawable/market_hu_shen_radio_button_background_selector"
                        android:textColor="@color/checked_red_unchecked_black_selector"
                        android:textSize="14sp"
                        android:text="快速涨幅"/>
                    <RadioButton
                        android:id="@+id/hu_shen_stocks_ranking_rb_4"
                        style="@style/RadioButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="34dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="12dp"
                        android:background="@drawable/market_hu_shen_radio_button_background_selector"
                        android:textColor="@color/checked_red_unchecked_black_selector"
                        android:textSize="14sp"
                        android:text="成交额"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="14dp">
                    <RadioButton
                        android:id="@+id/hu_shen_stocks_ranking_rb_5"
                        style="@style/RadioButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="34dp"
                        android:layout_weight="1"
                        android:background="@drawable/market_hu_shen_radio_button_background_selector"
                        android:textColor="@color/checked_red_unchecked_black_selector"
                        android:textSize="14sp"
                        android:text="大单净量"/>
                    <RadioButton
                        android:id="@+id/hu_shen_stocks_ranking_rb_6"
                        style="@style/RadioButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="34dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="12dp"
                        android:background="@drawable/market_hu_shen_radio_button_background_selector"
                        android:textColor="@color/checked_red_unchecked_black_selector"
                        android:textSize="14sp"
                        android:text="量比榜"/>
                    <RadioButton
                        android:id="@+id/hu_shen_stocks_ranking_rb_7"
                        style="@style/RadioButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="34dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="12dp"
                        android:background="@drawable/market_hu_shen_radio_button_background_selector"
                        android:textColor="@color/checked_red_unchecked_black_selector"
                        android:textSize="14sp"
                        android:text="换手率"/>
                    <RadioButton
                        android:id="@+id/hu_shen_stocks_ranking_rb_8"
                        style="@style/RadioButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="34dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="12dp"
                        android:background="@drawable/market_hu_shen_radio_button_background_selector"
                        android:textColor="@color/checked_red_unchecked_black_selector"
                        android:textSize="14sp"
                        android:text="主力净流入"/>
                </LinearLayout>
            </edu.ntu.graduation.util.CustomRadioGroup>
            <RelativeLayout
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/hu_shen_stocks_ranking_industry_groups"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:textColor="@color/text_gray"
                    android:textSize="15sp"
                    android:text="行业板块"/>
                <TextView
                    android:id="@+id/hu_shen_stocks_ranking_selection"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/hu_shen_stocks_ranking_industry_groups"
                    android:gravity="right"
                    android:textColor="@color/text_gray"
                    android:textSize="15sp"
                    android:text="涨幅"/>
                <TextView
                    android:id="@+id/hu_shen_stocks_ranking_newest"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/hu_shen_stocks_ranking_selection"
                    android:gravity="right"
                    android:textColor="@color/text_gray"
                    android:textSize="15sp"
                    android:text="最新"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:background="@color/light_gray"
                />
            <include layout="@layout/main_market_hu_shen_stocks_ranking_list_item" />
            <edu.ntu.graduation.util.NoScrollListview
                android:id="@+id/hu_shen_stocks_ranking_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </edu.ntu.graduation.util.NoScrollListview>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="9dp"
            android:background="@color/light_gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="异动"/>
            <RadioGroup
                android:id="@+id/hu_shen_abnormal_action_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/hu_shen_abnormal_action_rb_1"
                    style="@style/RadioButtonStyle"
                    android:layout_width="90dp"
                    android:layout_height="34dp"
                    android:checked="true"
                    android:background="@drawable/market_hu_shen_radio_button_background_selector"
                    android:textColor="@color/checked_red_unchecked_black_selector"
                    android:textSize="14sp"
                    android:text="大盘异动"/>

                <RadioButton
                    android:id="@+id/hu_shen_abnormal_action_rb_2"
                    style="@style/RadioButtonStyle"
                    android:layout_width="90dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="14dp"
                    android:background="@drawable/market_hu_shen_radio_button_background_selector"
                    android:textColor="@color/checked_red_unchecked_black_selector"
                    android:textSize="14sp"
                    android:text="个股异动"/>

                <RadioButton
                    android:id="@+id/hu_shen_abnormal_action_rb_3"
                    style="@style/RadioButtonStyle"
                    android:layout_width="90dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="14dp"
                    android:background="@drawable/market_hu_shen_radio_button_background_selector"
                    android:textColor="@color/checked_red_unchecked_black_selector"
                    android:textSize="14sp"
                    android:text="竞价异动"/>
            </RadioGroup>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="9dp"
            android:background="@color/light_gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="热点板块"/>

            <RadioGroup
                android:id="@+id/hu_shen_hot_plate_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/hu_shen_hot_plate_rb_1"
                    style="@style/RadioButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="34dp"
                    android:layout_weight="1"
                    android:checked="true"
                    android:background="@drawable/market_hu_shen_radio_button_background_selector"
                    android:textColor="@color/checked_red_unchecked_black_selector"
                    android:textSize="14sp"
