<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/top_bar"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/red"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="20dp">
        <ImageButton
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:background="@drawable/return_white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:textSize="19sp"
            android:text="问财"/>
    </RelativeLayout>
    <include layout="@layout/chating_left_item" />
    <include layout="@layout/chating_right_item"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:overScrollMode="never"
        android:scrollbars="none">

    </android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_gray"
            android:textSize="16sp"
            android:text="我想："/>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:overScrollMode="never">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:gravity="center"
                    android:layout_marginLeft="12dp"
                    android:paddingLeft="9dp"
                    android:paddingRight="9dp"
                    android:background="@drawable/chat_keyword_bg"
                    android:textColor="@color/cyanine"
                    android:textSize="14sp"
                    android:text="管总为什么这么有钱？"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:gravity="center"
                    android:layout_marginLeft="12dp"
                    android:paddingLeft="9dp"
                    android:paddingRight="9dp"
                    android:background="@drawable/chat_keyword_bg"
                    android:textColor="@color/cyanine"
                    android:textSize="14sp"
                    android:text="管总的致富经验"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:gravity="center"
                    android:layout_marginLeft="12dp"
                    android:paddingLeft="9dp"
                    android:paddingRight="9dp"
                    android:background="@drawable/chat_keyword_bg"
                    android:textColor="@color/cyanine"
                    android:textSize="14sp"
                    android:text="管总如何打伤美国股市"/>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center_vertical">
        <EditText
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:layout_marginLeft="4dp"
            android:textColor="@color/text_gray"
            android:textCursorDrawable="@null"
            android:background="@drawable/white_bg"
            android:textSize="16sp"
            android:hint="" />
        <ImageButton
            android:layout_marginLeft="16dp"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/send_white"/>
    </LinearLayout>
</LinearLayout>