<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/trading_history_number"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/trading_history_time"
                android:gravity="right"
                android:textColor="@color/text_gray"
                android:textSize="14sp"
                android:text="成交量"/>
            <TextView
                android:id="@+id/trading_history_price"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/trading_history_number"
                android:gravity="right"
                android:textColor="@color/text_gray"
                android:textSize="14sp"
                android:text="成交价"/>
            <TextView
                android:id="@+id/trading_history_volume"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/trading_history_price"
                android:gravity="right"
                android:textColor="@color/text_gray"
                android:textSize="14sp"
                android:text="成交额"/>
            <TextView
                android:id="@+id/trading_history_time"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:textColor="@color/text_gray"
                android:textSize="14sp"
                android:text="成交时间"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:background="@color/light_gray"/>
            <include layout="@layout/trading_history_list_item"/>
            <edu.ntu.graduation.util.NoScrollListview
                android:id="@+id/trading_history_lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>