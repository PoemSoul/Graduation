<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:overScrollMode="never">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="26dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/red_border">
                <ImageView
                    android:layout_marginLeft="5dp"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:background="@drawable/search_text_gray"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginLeft="4dp"
                    android:textColor="@color/text_gray"
                    android:textCursorDrawable="@null"
                    android:background="@null"
                    android:textSize="20sp"
                    android:hint="股票代码/名称" />
                <TextView
                    android:layout_width="55dp"
                    android:layout_height="26dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:background="@drawable/red_bg"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:text="查 询"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="19sp"
                    android:text="最新价格"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/red"
                    android:textSize="20sp"
                    android:text="请先输入股票代码/名称"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red"
                    android:textSize="16sp"
                    android:text=""/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:textColor="@color/red"
                    android:textSize="16sp"
                    android:text=""/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:background="@drawable/red_border"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:background="@color/red"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:text="-"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/text_gray"
                    android:textCursorDrawable="@null"
                    android:background="@null"
                    android:textSize="20sp"
                    android:hint="请输入购买数量" />
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:background="@color/red"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:text="+"/>
            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_selector"
                android:layout_marginTop="20dp"
                android:text="确认购买"
                android:textColor="@color/white"
                android:textSize="20dp" />
        </LinearLayout>
        <View
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="9dp"
            android:background="@color/light_gray"/>
        <RelativeLayout
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/trading_buy_latest_price"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:textColor="@color/text_gray"
                android:textSize="15sp"
                android:text="最新价格"/>
            <TextView
                android:id="@+id/trading_buy_position"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/trading_buy_latest_price"
                android:gravity="right"
                android:textColor="@color/text_gray"
                android:textSize="15sp"
                android:text="持仓"/>
            <TextView
                android:id="@+id/trading_buy_earnings"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/trading_buy_position"
                android:gravity="right"
                android:textColor="@color/text_gray"
                android:textSize="15sp"
                android:text="盈亏"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:background="@color/light_gray"/>
            <include layout="@layout/trading_buy_sell_position_list_item"/>
            <edu.ntu.graduation.util.NoScrollListview
                android:id="@+id/trading_buy_lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>